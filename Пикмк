#include <iostream>
#include <string>
using namespace std;

static const int MAX_LENGTH = 100;

class Base_number {
protected:
    unsigned char data[MAX_LENGTH];
    int len;

public:
    Base_number();
    virtual void setValue(string value) = 0;
    virtual void print() const = 0;
};

class BitString : public Base_number {
public:
    BitString();
    void print() const override;
    void setValue(string value) override;
};

class Hex : public Base_number {
public:
    Hex();
    void setValue(string value) override;
    void print() const override;
};

Base_number :: Base_number() {
    for (int i = 0; i < MAX_LENGTH; ++i) {
        data[i] = 0;
    }
    len = 0;
}

BitString :: BitString() : Base_number() {};

void BitString :: setValue(string value) {
    len = value.length();
    for (int i = 0; i < len; i++) {
        data[len - 1 - i] = value[i];
    }
}

void BitString :: print() const {
    if (len == 0) {
        cout << "0" << endl;
        return;
    }

    for (int i = len - 1; i >= 0; --i) {
        cout << data[i];
    }

    cout << endl;
}

Hex :: Hex() : Base_number() {};

void Hex :: setValue(string value) {
    len = value.length();
    for (int i = 0; i < len; i++) {
        data[len - 1 - i] = value[i];
    }
}

void Hex :: print() const {
    if (len == 0) {
        cout << "0";
        return;
    }

    for (int i = len - 1; i >= 0; --i) {
        const unsigned char d = data[i];
        cout << d;
    }

    cout << endl;
}

int main() {
    setlocale(LC_ALL, "Rus");

    cout << "----------Тестирование класса BitString----------" << endl;

    BitString bit1;
    
    cout << "Тестирование конструктора по-умолчанию (ожидается 0): ";
    bit1.print();

    cout << "Тестирование установки значения \"12AA\": ";
    bit1.setValue("12AA");
    bit1.print();

    BitString bit2;
    cout << "Тестирование установки значения \"54F2\": ";
    bit2.setValue("54F2");
    bit2.print();

    cout << "\n----------Тестирование класса Hex----------" << endl;
    
    Hex hex1;
    cout << "Тестирование конструктора по-умолчанию (ожидается 0): ";
    hex1.print();
    
    cout << "Тестирование установки значения \"12AA\": ";
    hex1.setValue("12AA");
    hex1.print();
    
    Hex hex2;
    cout << "Тестирование установки значения \"54F2\": ";
    hex2.setValue("54F2");
    hex2.print();

    return 0;
}
